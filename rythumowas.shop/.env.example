# =============================================================================
# RYTHUMOWAS.SHOP - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env files to git!

# -----------------------------------------------------------------------------
# STACK AUTH (Authentication)
# -----------------------------------------------------------------------------
# Get these from: https://stack-auth.com → Your Project → API Keys
# 1. Sign up at stack-auth.com
# 2. Create a new project
# 3. Go to API Keys section
# 4. Copy the three keys below

NEXT_PUBLIC_STACK_PROJECT_ID=your_project_id_here
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY=your_publishable_client_key_here
STACK_SECRET_SERVER_KEY=your_secret_server_key_here

# -----------------------------------------------------------------------------
# DATABASE (PostgreSQL)
# -----------------------------------------------------------------------------
# This database is SHARED with medusa-backend (use same URL in both)
#
# Option 1: Neon (Recommended - Free tier, no setup)
#   1. Go to https://neon.tech
#   2. Create free account
#   3. Create new project
#   4. Copy connection string
#   Example: postgresql://user:password@ep-xxx.neon.tech/neondb?sslmode=require
#
# Option 2: Supabase (Free tier, includes dashboard)
#   1. Go to https://supabase.com
#   2. Create project
#   3. Get PostgreSQL connection string from Settings → Database
#   Example: postgresql://postgres:password@db.xxx.supabase.co:5432/postgres
#
# Option 3: Local PostgreSQL
#   1. Install PostgreSQL
#   2. Create database: createdb rythumowa
#   Example: postgresql://user:password@localhost:5432/rythumowa

DATABASE_URL="postgresql://user:password@localhost:5432/rythumowa?schema=public"

# -----------------------------------------------------------------------------
# MEDUSA BACKEND URL
# -----------------------------------------------------------------------------
# URL where your Medusa backend is running
# Development: http://localhost:9000
# Production: Your deployed Medusa URL (e.g., https://api.rythumowa.shop)

NEXT_PUBLIC_MEDUSA_BACKEND_URL="http://localhost:9000"

# -----------------------------------------------------------------------------
# APPLICATION URL
# -----------------------------------------------------------------------------
# URL where this Next.js app is running
# Development: http://localhost:3000
# Production: Your domain (e.g., https://rythumowa.shop)

NEXT_PUBLIC_APP_URL="http://localhost:3000"

# -----------------------------------------------------------------------------
# OPTIONAL: Bundle Analyzer
# -----------------------------------------------------------------------------
# Set to true to analyze bundle size during build
# Only use during development to optimize bundle size

ANALYZE=false
