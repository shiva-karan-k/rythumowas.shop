{
  "name": "rythumowas-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "RythuMowa Natural Farming Marketplace - Monorepo",
  "scripts": {
    "dev": "pnpm --parallel dev",
    "dev:shop": "pnpm --filter rythumowas.shop dev",
    "dev:backend": "pnpm --filter medusa-backend dev",
    "build": "pnpm --recursive build",
    "build:shop": "pnpm --filter rythumowas.shop build",
    "build:backend": "pnpm --filter medusa-backend build",
    "lint": "pnpm --recursive lint",
    "clean": "pnpm --recursive clean && rm -rf node_modules"
  },
  "keywords": [
    "ecommerce",
    "marketplace",
    "natural-farming",
    "andhra-pradesh"
  ],
  "author": "RythuMowa",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  }
}
